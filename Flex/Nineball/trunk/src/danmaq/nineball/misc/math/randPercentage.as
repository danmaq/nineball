package danmaq.nineball.misc.math
{

	/**
	 * 指定の確率で真偽を返します。
	 *
	 * @param fPercentage 百分率
	 * @return 指定した確率でtrue
	 */
	public function randPercentage(fPercentage:Number):Boolean
	{
		return Math.random() * 100 < fPercentage;
	}
}
