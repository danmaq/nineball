package danmaq.nineball.misc.math
{

	/**
	 * 二値の誤差が一定以内かどうかを判定します。
	 *
	 * @param fExpr1 対象値1
	 * @param fExpr2 対象値2
	 * @param fLength 誤差
	 * @return 二つの対象値が誤差の範囲内ならtrue
	 */
	public function isNear(fExpr1:Number, fExpr2:Number, fLength:Number):Boolean
	{
		return abs(fExpr1 - fExpr2) < fLength;
	}
}
