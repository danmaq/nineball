package danmaq.nineball.misc.math
{

	/**
	 * 乱数によって誤差を発生させます。
	 *
	 * @param fExpr 誤差の幅(±exprとなります)
	 * @return 0を中心とした誤差
	 */
	public function randBlur(fExpr:Number):Number
	{
		return Math.random() * fExpr * 2 - fExpr;
	}
}
