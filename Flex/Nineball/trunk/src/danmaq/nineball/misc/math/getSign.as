package danmaq.nineball.misc.math
{

	/**
	 * 数値符号を返します。
	 *
	 * @param fExpr 対象値
	 * @return 負数の場合-1、正の整数の場合1、0の場合0
	 */
	public function getSign(fExpr:Number):int
	{
		return fExpr > 0 ? 1 : (fExpr < 0 ? -1 : 0);
	}
}
