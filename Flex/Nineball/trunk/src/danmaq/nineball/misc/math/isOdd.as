package danmaq.nineball.misc.math
{

	/**
	 * 値が奇数かどうかを取得します。
	 * 
	 * @param nExpr 対象の値
	 * @return 値が奇数である場合、true
	 */
	public function isOdd(nExpr:int):Boolean
	{
		return (nExpr & 1) == 1;
	}
}
