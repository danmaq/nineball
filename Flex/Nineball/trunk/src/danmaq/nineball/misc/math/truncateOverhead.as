package danmaq.nineball.misc.math
{

	/**
	 * 指定桁以上を切り捨てます。
	 *
	 * @param fExpr 対象値
	 * @param nGrade 切り捨てる桁(負数で小数位も指定出来ます)
	 * @return 指定桁以上を切り捨てられた対象値
	 */
	public function truncateOverhead(fExpr:Number, nGrade:int):Number
	{
		var fUnit:Number = 10 ^ ((nGrade - 1) >> 0);
		return fExpr - ((fExpr / fUnit) >> 0) * fUnit;
	}
}
