package danmaq.nineball.misc.math
{

	/**
	 * 絶対値を求めます。
	 *
	 * @param fExpr 対象値。
	 * @return 絶対値。
	 */
	public function abs(expr:Number):Number
	{
		return expr < 0 ? -expr : expr;
	}
}
